<!-- The animation from cross to tick -->

<animated-vector

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:drawable="@drawable/ic_cross"

    >

    <!-- animate the change from cross to tick -->
    <!-- rotate for flair -->

    <!-- animate the change from cross to tick -->

    <target

        android:animation="@anim/cross_to_tick"

        android:name="@string/name_cross"

        />

    <!-- rotate for flair -->

    <target

        android:animation="@anim/rotate_cross_to_tick"

        android:name="@string/group_tickcross"

        />

</animated-vector>